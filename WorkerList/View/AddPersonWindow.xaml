<Window x:Class="WorkerList.View.AddPersonWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WorkerList.View"
        mc:Ignorable="d"
        Title="Прием на работу" Height="350" Width="250">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Vertical"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Width="100">
            <TextBlock Text="Имя"/>
            <TextBox Text="" x:Name="FirstName"/>
            <TextBlock Text="Фамилия"/>
            <TextBox Text="" x:Name="LastName"/>
            <TextBlock Text="Отчество"/>
            <TextBox Text="" x:Name="MiddleName"/>
            <TextBlock Text="Должность"/>
            <TextBox Text="" Name="Position"/>
            <TextBlock Text="Отдел"/>
            <TextBox Text="" x:Name="Salary"/>
            <TextBlock Text="Дата приема на работу"/>
            <DatePicker x:Name="EmploymentDate"/>
        </StackPanel>
        <Button Grid.Row ="1" Content="Добавить сотрудника"/>
    </Grid>
</Window>
