<Window x:Class="WorkerList.View.UploadingPersonsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WorkerList.View"
        mc:Ignorable="d"
        Title="Выгрузка" Height="200" Width="250"
        Name="UnloadingPersonsWnd">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Vertical"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Width="230">
            <TextBlock Text="Путь к файлу" HorizontalAlignment="Center"/>
            <TextBox Text="{Binding UnloadingAddres}" HorizontalAlignment="Center" Name="UnloadingAddresTextBox" Width="200" />
            <Button  Click="Browse" Content="Обзор" HorizontalAlignment="Right" Margin="10"/>
        </StackPanel>
        <Button Grid.Row ="1" Content="Сохранить"
                Command="{Binding UnloadingPersons}"
                CommandParameter="{Binding ElementName=UnloadingPersonsWnd}"/>
    </Grid>
</Window>
