<Window x:Class="WorkerList.View.DismissalPersonWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WorkerList.View"
        mc:Ignorable="d"
        Title="" Height="150" Width="300" Name="DismissalPersonWnd">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Vertical"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Width="200">
            <TextBlock Text="Дата увольнения"/>
            <TextBox Text="{Binding DateOfDismissal}" PreviewTextInput="PreviewDateInput"/>
        </StackPanel>
        <Button Grid.Row="1" Content="Изменить"
                Command="{Binding DismissalPerson}"
                CommandParameter="{Binding ElementName=DismissalPersonWnd}"/>
    </Grid>
</Window>
